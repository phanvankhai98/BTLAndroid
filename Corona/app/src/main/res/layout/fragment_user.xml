<!--        android:text="Danh mục"-->
<!--        android:textColor="@color/colorBlack"-->
<!--        android:textSize="24sp"-->
<!--        android:textStyle="bold" />-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Danh mục"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:textSize="24dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/ln_userinfo"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/custom_bg_user_menu"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_user_menu"
            android:padding="5dp"
            android:src="@mipmap/ic_user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="20dp"
            android:text="Thông tin cá nhân"
            android:textColor="@color/colorBlack" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_gmail"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/custom_bg_user_menu"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_user_menu"
            android:padding="5dp"
            android:src="@mipmap/ic_email" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="20dp"
            android:text="Gửi thư hỏi đáp"
            android:textColor="@color/colorBlack" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_fb"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/custom_bg_user_menu"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_user_menu"
            android:padding="5dp"
            android:src="@mipmap/ic_facebook" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="20dp"
            android:text="Fanpage"
            android:textColor="@color/colorBlack" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_change_pass"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/custom_bg_user_menu"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_user_menu"
            android:padding="5dp"
            android:src="@mipmap/ic_key" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="20dp"
            android:text="Đổi mật khẩu"
            android:textColor="@color/colorBlack" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_logout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/custom_bg_user_menu"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_user_menu"
            android:padding="5dp"
            android:src="@mipmap/ic_logout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="20dp"
            android:text="Đăng xuất"
            android:textColor="@color/colorBlack" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Phiên bản 1.0"
        android:layout_marginTop="20dp"
        />
</LinearLayout>